#macro(mainLayout)
<html>
    <head>
        <title>Issue Tracker by Dorzhi</title>
    </head>
    <body>
        <header>
            <ul id="menu">
                #if($currentUser)
                    <li>
                        <form method="post" action="$WebPath.getLOGOUT()">
                            <button id="logout">$msg.get("COMMON_NAV_LOGOUT")</button>
                        </form>
                    </li>
                #else
                    <li><a href="$WebPath.getLOGIN()"">$msg.get("COMMON_NAV_LOGIN")</a></li>
                #end
            </ul>
        </header>
        <main>
            <div id="content">
                $bodyContent
            </div>
        </main>
    </body>
</html>
#end